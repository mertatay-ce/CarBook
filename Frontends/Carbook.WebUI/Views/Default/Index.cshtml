@model CarBook.Dto.LocationDtos.ResultLocationDto

@{
    ViewBag.Title = "title";
    Layout = null;
    
    
}
<!DOCTYPE html>
<html lang="en">
  @await Component.InvokeAsync("_HeadUILayoutComponentPartial")
  <body>
    
	@await Component.InvokeAsync("_NavbarUILayoutComponentPartial")
    <!-- END nav -->
    
    @await Component.InvokeAsync("_DefaultCoverUILayoutComponentPartial")
     <section class="ftco-section ftco-no-pt bg-light">
    	<div class="container">
    		<div class="row no-gutters">
    			<div class="col-md-12	featured-top">
    				<div class="row no-gutters">
	  					<div class="col-md-4 d-flex align-items-center">
	  						<form method="post" class="request-form ftco-animate bg-primary">
		          		<h2>Gelecek Seyahatinizi Planlayın</h2>
			    				<div class="form-group">
								    <label for="" class="label">Alınacak Lokasyon</label>
								    @Html.DropDownListFor(x=> x.LocationId, (List<SelectListItem>) ViewBag.locations, new {@class="form-control" ,name="locationId", style=" background: rgb(16, 137, 255) !important; color: #fff !important; font-size:14px;"}) 
			    				</div>
			    				<div class="d-flex">
			    					<div class="form-group mr-2">
			                <label for="" class="label">Alınacak Tarih</label>
			                <input type="text" class="form-control" name="pickUpDate" id="book_pick_date" placeholder="Kiralanacak Tarihi Seçiniz...">
			              </div>
			              <div class="form-group ml-2">
			                <label for="" class="label">İade Edilecek Tarih</label>
			                <input type="text" class="form-control" name="dropOffDate" id="book_off_date" placeholder="İade Edilecek Tarihi Seçiniz...">
			              </div>
		              </div>
							    <div class="form-group">
								    <label for="" class="label">Alınacak Saat</label>
								    <input type="text" class="form-control" name="pickUpTime" id="book_time_pick" placeholder="Saati Seçiniz...">
							    </div>
							    <div class="form-group">
								    <label for="" class="label">iade Edilecek Saat</label>
								    <input type="text" class="form-control" name="dropOffTime" id="dropoff_time_pick" placeholder="Saati Seçiniz...">
							    </div>
							    <div class="form-group">
								    <button type="submit" class="btn btn-secondary py-3 px-4">En Uygun Aracı Bul</button>
							    </div>
			    			</form>
	  					</div>
	  					<div class="col-md-8 d-flex align-items-center">
	  						<div class="services-wrap rounded-right w-100">
	  							<h3 class="heading-section mb-4">Araç Kiralamanın En İyi Yolu</h3>
	  							<div class="row d-flex mb-4">
					          <div class="col-md-4 d-flex align-self-stretch ftco-animate">
					            <div class="services w-100 text-center">
				              	<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
				              	<div class="text w-100">
					                <h3 class="heading mb-2">Alınacak Yeri Seçin</h3>
				                </div>
					            </div>      
					          </div>
					          <div class="col-md-4 d-flex align-self-stretch ftco-animate">
					            <div class="services w-100 text-center">
				              	<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
				              	<div class="text w-100">
					                <h3 class="heading mb-2">En Uygun Fiyatı Seçin</h3>
					              </div>
					            </div>      
					          </div>
					          <div class="col-md-4 d-flex align-self-stretch ftco-animate">
					            <div class="services w-100 text-center">
				              	<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
				              	<div class="text w-100">
					                <h3 class="heading mb-2">Kiralık Aracınızı Rezerve Edin</h3>
					              </div>
					            </div>      
					          </div>
					        </div>
					        <p><a href="#" class="btn btn-primary py-3 px-4">Muhteşem Aracnızı Kiralayın</a></p>
	  						</div>
	  					</div>
	  				</div>
				</div>
  		</div>
	    </div>
     </section>

    

    @await Component.InvokeAsync("_DefaultLast5CarsWithBrandComponentPartial")
  
    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")
    @await Component.InvokeAsync("_TestimonialComponentPartial")
    
    @await Component.InvokeAsync("_BlogLast3BlogsWithAuthorsComponentPartial")

    @await Component.InvokeAsync("_DefaultStatisticsComponentPartial")

  @await Component.InvokeAsync("_FooterUILayoutComponentPartial")
    
  @await Component.InvokeAsync("_ScriptsUILayoutComponentPartial")
  
 

  
    
  </body>
</html>