@model List<CarBook.Dto.BrandDtos.ResultBrandDto>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Marka Yönetim Paneli</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Paneller</a></li>
                            <li class="breadcrumb-item active">Marka Yönetim Paneli</li>
                        </ol>
                    </div>
                                
                </div>
            </div>
        </div>     
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Marka Listesi</h4>
                        <p class="card-subtitle mb-4">
                           Araçlarınızın markasını ekleme, markaların listesi, markalar hakkında düzenlemeler ve kaldırma işlemleri bu panel üzerinden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Marka Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @if (Model.Count == 0)
                                {
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        Burada hiç marka yok. Hadi birkaç tane eklemek için <strong>"Yeni Marka Ekle"</strong> butonuna bas.
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.name</td>
                                            <td>
                                                <a href="/AdminBrand/RemoveBrand/@item.brandId" class="btn btn-outline-danger me-5">Sil</a>
                                                <a href="/AdminBrand/UpdateBrand/@item.brandId" class="btn btn-outline-warning me-5">Güncelle</a>
                                                <a href="/AdminBrand/BrandDetail/@item.brandId" class="btn btn-outline-dark me-5">Markaya Ait Araçlar</a>
                                            </td>
                                        </tr>
                                    }
                                }
                               


                                </tbody>
                            </table>
                            <a href="/AdminBrand/CreateBrand" class="btn btn-outline-primary mt-4">Yeni Marka Girişi</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>





        </div>

    </div> <!-- container-fluid -->
</div>
