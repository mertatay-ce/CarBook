@model CarBook.Dto.PricingDtos.CreatePricingDto
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Yeni Ödeme Türü Ekleme</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Paneller</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Ödeme Türleri Yönetim Paneli</a></li>
                            <li class="breadcrumb-item active">Yeni Ödeme Türü Ekle</li>
                        </ol>
                    </div>
                                
                </div>
            </div>
        </div>    
        <div class="row">
            <div class="col-xl-12">
                 <div class="card">
                     <div class="card-body">
                    
                                    <h4 class="card-title">Yeni Ödeme Türü (Zaman Periyodu) Girişi</h4>
                                    <p class="card-subtitle mb-4">Yeni bir ödeme türü belirtmek için belirli bir zaman periyodu kullanmanız gerekmektedir. Bu zaman periyodunu eklemek için aşağıdaki form üzerinden bilgileri girip <strong>"Ödeme Türü Oluştur"</strong> tuşuna basınız.</p>
                                    
                                    <form method="post">
                                       
                                        <div class="form-group">
                                            <label for="Name">Ödeme Türü</label>
                                            <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Ödeme türü giriniz...">
                                        </div>
                                     
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Türü Oluştur</button>
                                    </form>
                    
                                </div> <!-- end card-body-->
                     </div> <!-- end card-->
            </div>
        </div>
       

    </div> <!-- container-fluid -->
</div>
