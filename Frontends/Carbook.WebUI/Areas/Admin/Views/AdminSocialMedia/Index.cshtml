@model List<CarBook.Dto.SocialMediaDtos.ResultSocialMediaDto>

@{
    
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Sosyal Medya Alanı Yönetim Paneli</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Paneller</a></li>
                            <li class="breadcrumb-item active">Sosyal Media Alanı Yönetim Paneli</li>
                        </ol>
                    </div>
                                
                </div>
            </div>
        </div>     
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal medya alanında ana sayfada bulunacak sosyal medya linklerinizi kurgulandığı sayfamızdır. Bu sayfada işletmenizin sosyla media linklerini ekleyebilir, güncelleyebilir
                            ve silebilirsiniz. 
                        </p>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            Buraya her ekleyeceğiniz sosyal medya linki ilgili web sayfasında otomatik olarak güncellenecektir. Tema bütünlüğü açısında kontrol ederek web sitesinize hizmet eklemeleri gerçekleştiriniz.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Sosyal Medya Platformu</th>
                                    <th>Sosyal Medya Linki</th>
                                    <th>İkon Url</th>
                                    <th>İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @if (Model.Count == 0)
                                {
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        Burada hiç sosyal medya bilgisi yok. Hadi bir tane eklemek için <strong>"Yeni Sosyal Medya Girişi"</strong> butonuna bas.
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.Url</td>
                                            <td>@item.Icon</td>
                                            <td>
                                                <a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger me-5">Sil</a>
                                                <a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-warning me-5">Güncelle</a>
                                                <a href="@item.Url" class="btn btn-outline-warning me-5">Siteyi Ziyaret Et</a>
                                            </td>
                                        </tr>
                                    }
                                }
                               


                                </tbody>
                            </table>
                           
                            <a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-primary mt-4">Yeni Sosyal Medya Girişi</a>
                            
                           
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>





        </div>

    </div> <!-- container-fluid -->
</div>
