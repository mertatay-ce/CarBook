@model List<CarBook.Dto.ServiceDtos.ResultServiceDto>

@{
    
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Hizmetler Alanı Yönetim Paneli</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Paneller</a></li>
                            <li class="breadcrumb-item active">Hizmetler Alanı Yönetim Paneli</li>
                        </ol>
                    </div>
                                
                </div>
            </div>
        </div>     
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmetler Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Hizmetler alanında ana sayfada bulunacak hizmetlerimizin kurgulandığı sayfamızdır. Bu sayfada işletmenizde vereceğiniz hizmetleri detaylı olarak ekleyebilir, güncelleyebilir
                            ve silebilirsiniz. 
                        </p>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            Buraya her ekleyeceğiniz hizmet <strong>"Hizmetler"</strong> sayfasında otomatik olarak güncellenecektir. Tema bütünlüğü açısında kontrol ederek web sitesinize hizmet eklemeleri gerçekleştiriniz.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Hizmet Adı</th>
                                    <th>Açıklama</th>
                                    <th>İkon Url</th>
                                    <th>İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @if (Model.Count == 0)
                                {
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        Burada hiç hizmet bilgisi yok. Hadi bir tane eklemek için <strong>"Yeni Hizmet Girişi"</strong> butonuna bas.
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.title</td>
                                            <td>@item.description</td>
                                            <td>@item.iconUrl</td>
                                            <td>
                                                <a href="/Admin/AdminService/RemoveService/@item.serviceId" class="btn btn-outline-danger me-5">Sil</a>
                                                <a href="/Admin/AdminService/UpdateService/@item.serviceId" class="btn btn-outline-warning me-5">Güncelle</a>
                                            </td>
                                        </tr>
                                    }
                                }
                               


                                </tbody>
                            </table>
                            @if (Model.Count < 4)
                            {
                                <a href="/Admin/AdminService/CreateService" class="btn btn-outline-primary mt-4">Yeni Hizmet Girişi</a>
                            }
                            else
                            {   <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    4 adetten fazla hizmet desteklenmemektedir. Mevcuttaki hizmetlerinizi değiştiriniz.
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <a href="/Admin/AdminService/CreateService" class="btn btn-outline-primary mt-1 disabled">Yeni Hizmet Girişi</a>
                            }
                           
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>





        </div>

    </div> <!-- container-fluid -->
</div>
