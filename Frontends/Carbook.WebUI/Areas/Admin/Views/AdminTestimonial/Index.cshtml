@model List<CarBook.Dto.TestimonialDtos.ResultTestimonialDto>

@{
    
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Referanslar Alanı Yönetim Paneli</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Paneller</a></li>
                            <li class="breadcrumb-item active">Referanslar Alanı Yönetim Paneli</li>
                        </ol>
                    </div>
                                
                </div>
            </div>
        </div>     
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referanslar Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Referanslar alanında ana sayfada bulunan bizden hizmet almış müşterilerimizin yorumları ve profilleri yer almaktadır. Burada mevcutta yer alan referansları yönetebilir
                            ve ana sayfada yer alan "Referanslar" kısmında sergileyebilirsiniz.
                        </p>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            Buraya her ekleyeceğiniz referansla ilgili bilgi web sayfasında otomatik olarak güncellenecektir. Tema bütünlüğü açısında kontrol ederek web sitesinize hizmet eklemeleri gerçekleştiriniz.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Referans Adı Soyadı</th>
                                    <th>Referans Unvanı</th>
                                    <th>Referans Yorumu</th>
                                    <th>Referans Profil URL Linki</th>
                                    <th>İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @if (Model.Count == 0)
                                {
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        Burada hiç referans bilgisi yok. Hadi bir tane eklemek için <strong>"Yeni Referans Girişi"</strong> butonuna bas.
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.name</td>
                                            <td>@item.title</td>
                                            <td>@item.comment</td>
                                            <td><img src="@item.imageUrl" alt="TestimonialImage" width="50" height="50"/></td>
                                            <td>
                                                <a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.testimonialId" class="btn btn-outline-danger me-5">Sil</a>
                                                <a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.testimonialId" class="btn btn-outline-warning me-5">Güncelle</a>
                                                <a href="/Default/Index" class="btn btn-outline-warning me-5">Siteyi Ziyaret Et</a>
                                            </td>
                                        </tr>
                                    }
                                }
                               


                                </tbody>
                            </table>
                           
                            <a href="/Admin/AdminTestimonial/CreateTestimonial" class="btn btn-outline-primary mt-4">Yeni Referans Girişi</a>
                            
                           
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>





        </div>

    </div> <!-- container-fluid -->
</div>
